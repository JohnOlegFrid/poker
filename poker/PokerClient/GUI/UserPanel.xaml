<UserControl x:Class="PokerClient.GUI.UserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerClient.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    
    <DockPanel LastChildFill="True" Background="Black">
        <TextBlock x:Name="userNameTB" DockPanel.Dock="Left" Width="400" FontSize="16" Foreground="White" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,-6" FontWeight="Bold"/>
        <TextBlock x:Name="userRankTB" DockPanel.Dock="Left" Width="200" FontSize="16" Foreground="White" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,-6" FontWeight="Bold"/>
        <TextBlock x:Name="userMoneyTB" DockPanel.Dock="Right" Width="200"  FontSize="16" Foreground="White" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,-6" FontWeight="Bold" />
    </DockPanel>
    
</UserControl>
