<Window x:Class="PokerClient.GUI.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerClient.GUI"
        mc:Ignorable="d"
        Title="RoomWindow" Height="640" Width="800">
    <Grid Height="640" Margin="0,0,0,0" Width="800">
        <Image Source="Images/MainBackground.jpg" Stretch="Fill"/>
        <ContentControl x:Name="mainContentControl" Width="800" Height="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">

        </ContentControl>
        <Label x:Name="InfoText" Content="Info room" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="43" Width="735" Margin="39,35,26,0" FontSize="20" Foreground="White">
            <Label.Background>
                <SolidColorBrush Color="#FF780303" Opacity="0.5"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
