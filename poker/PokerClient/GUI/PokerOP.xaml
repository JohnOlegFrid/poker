<UserControl x:Class="PokerClient.GUI.PokerOP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerClient.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600">
    <Grid Height="50" VerticalAlignment="Bottom" Background="#FF626262">
        <Button x:Name="FoldButton" Content="Fold" HorizontalAlignment="Left" Height="30" Margin="10,11,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="CheckButton" Content="Check" HorizontalAlignment="Left" Height="30" Margin="98,11,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="CallButton" Content="Call" HorizontalAlignment="Left" Height="30" Margin="197,11,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.257,0.522"/>
        <Button x:Name="RaiseButton" Content="Raise" HorizontalAlignment="Left" Height="30" Margin="306,11,0,0" VerticalAlignment="Top" Width="55"/>
        <Slider x:Name="Slider" IsSnapToTickEnabled="True" HorizontalAlignment="Left" Margin="409,11,0,0" TickFrequency="1"  VerticalAlignment="Top" Width="93" SmallChange="1" TickPlacement="TopLeft" Height="29"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="536,11,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="{Binding ElementName=Slider, Path=Value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="45"/>

    </Grid>
</UserControl>
